{
  "name": "blog-platform",
  "version": "1.0.0",
  "description": "A modern MERN stack blog platform with JWT authentication and Tailwind CSS",
  "main": "index.js",
  "scripts": {
    "install-backend": "cd backend && npm install",
    "install-frontend": "cd frontend && npm install",
    "install-all": "npm run install-backend && npm run install-frontend",
    "dev-backend": "cd backend && npm run dev",
    "dev-frontend": "cd frontend && npm start",
    "build-frontend": "cd frontend && npm run build",
    "start-backend": "cd backend && npm start",
    "vercel-build": "cd backend && npm install && cd ../frontend && npm install && CI=false npm run build"
  },
  "keywords": [
    "react",
    "node",
    "express",
    "mongodb",
    "blog",
    "jwt",
    "tailwind"
  ],
  "author": "BlogPlatform Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.3.0",
    "react-icons": "^5.5.0",
    "react-tsparticles": "^2.12.2",
    "three": "^0.180.0",
    "tsparticles": "^3.9.1"
  }
}
